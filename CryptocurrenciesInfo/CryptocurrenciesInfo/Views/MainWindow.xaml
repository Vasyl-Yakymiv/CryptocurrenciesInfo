<Window x:Class="CryptocurrenciesInfo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Main_Window}" Height="400" Width="650" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" FontFamily="Segoe UI" FontSize="12" >
    <Grid>
        <ListView ItemsSource="{Binding Currencies}" Margin="0,28,0,-15" Background="{DynamicResource ListViewBackground}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{DynamicResource Name}" DisplayMemberBinding="{Binding Title}" Width="200"/>
                    <GridViewColumn Header="{DynamicResource Main_Symbol}" DisplayMemberBinding="{Binding Symbol}" Width="100"/>
                    <GridViewColumn Header="{DynamicResource Main_Price}" DisplayMemberBinding="{Binding Price}" Width="150"/>
                    <GridViewColumn Header="{DynamicResource Detail_Page}" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{DynamicResource Detail}"
                                        Tag="{Binding Id}"
                                        Click="Open_Details_Click"
                                        Width="160" Height="25"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="{DynamicResource Search}" HorizontalAlignment="Left" Margin="314,3,0,0" VerticalAlignment="Top" Width="100" Click="Search_Button_Click"/>
        <Button Content="{DynamicResource Convertor}" HorizontalAlignment="Left" Margin="419,3,0,0" VerticalAlignment="Top" Width="100" Click="Convert_Button_Click"/>
        <Button Content="{DynamicResource Settings}" HorizontalAlignment="Left" Margin="524,3,0,0" VerticalAlignment="Top" Width="100" Click="Settings_Button_Click"/>
    </Grid>
</Window>