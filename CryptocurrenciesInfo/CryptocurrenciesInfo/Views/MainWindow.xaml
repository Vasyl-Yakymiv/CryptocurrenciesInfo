<Window x:Class="CryptocurrenciesInfo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListViewGridViewSample" Height="400" Width="600">
    <Grid>
        <ListView ItemsSource="{Binding Currencies}" Margin="0,28,0,-28">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{DynamicResource Name}" DisplayMemberBinding="{Binding Title}" Width="200"/>
                    <GridViewColumn Header="{DynamicResource Main_Symbol}" DisplayMemberBinding="{Binding Symbol}" Width="100"/>
                    <GridViewColumn Header="{DynamicResource Main_Price}" DisplayMemberBinding="{Binding Price}" Width="150"/>
                    <GridViewColumn Header="{DynamicResource Detail_Page}" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="{DynamicResource Detail}"
                                        Tag="{Binding Id}"
                                        Click="Open_Details_Click"
                                        Width="70" Height="25"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="{DynamicResource Search}" HorizontalAlignment="Left" Margin="300,3,0,0" VerticalAlignment="Top" Width="86" Click="Search_Button_Click"/>
        <Button Content="{DynamicResource Convertor}" HorizontalAlignment="Left" Margin="391,3,0,0" VerticalAlignment="Top" Width="87" Click="Convert_Button_Click"/>
        <Button Content="{DynamicResource Settings}" HorizontalAlignment="Left" Margin="483,3,0,0" VerticalAlignment="Top" Width="87" Click="Settings_Button_Click"/>
    </Grid>
</Window>